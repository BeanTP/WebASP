@model IEnumerable<WeirdosShop.Models.Product>

<table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayName("Tên sản phẩm")
                </th>
                <th>
                    @Html.DisplayName("Hình sản phẩm")
                </th>
                <th>
                    @Html.DisplayName("Giá")
                </th>
                <th>
                    @Html.DisplayName("Kích cỡ")
                </th>
                <th>
                    @Html.DisplayName("Ưu đãi")
                </th>
                <th>
                    @Html.DisplayName("Hiển thị")
                </th>
                <th>
                    @Html.DisplayName("Thứ tự")
                </th>
                <th>
                    @Html.DisplayName("Thời gian cập nhật")
                </th>
                <th>Action</th>
            </tr>
        </thead>
        <tbody class="table-border-bottom-0">
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.name)
                    </td>
                    <td>
                        <img src="~/Content/images/@item.Category.name/@item.img" width="100px" />
                    </td>
                    <td>
                        @string.Format("{0:n0} VNĐ", item.price)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.size)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.sale)
                    </td>
                    <td>
                        @if (item.hide == true)
                        {
                            <p class="mb-0">Hiển thị</p>
                        }
                        else
                        {
                            <p class="mb-0">Ẩn</p>
                        }
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.order)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.datebegin)

                    </td>
                    <td>
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <p class="dropdown-item">
                                    <i class="bx bx-edit-alt me-1"></i> @Html.ActionLink("Chỉnh sửa", "Edit", new { id = item.id })
                                </p>
                                <p class="dropdown-item">
                                    <i class="bx bx-detail me-1"></i> @Html.ActionLink("Chi tiết", "Details", new { id = item.id })
                                </p>
                                <p class="dropdown-item">
                                    <i class="bx bx-trash me-1"></i> @Html.ActionLink("Xóa", "Delete", new { id = item.id })
                                </p>
                            </div>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
</table>