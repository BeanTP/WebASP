@model List<WeirdosShop.Models.CartItem>
@{
    ViewBag.Title = "Cart";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}
<div class="untree_co-section before-footer-section">
    <div class="container">
        <div class="row mb-5">
            <form class="col-md-12" method="post">
                <div class="site-blocks-table">
                    @if (Model == null || !Model.Any())
                    {
                        <p>Giỏ hàng trống trơn nè bạn ơi~~</p>
                    }
                    else
                    {
                        <table class="table">
                            <thead>
                                <tr>
                                    <th class="product-name">Tên sản phẩm</th>
                                    <th class="product-thumbnail">Ảnh sản phẩm</th>
                                    <th class="product-quantity">Số lượng</th>
                                    <th class="product-price">Đơn giá</th>
                                    <th class="product-total">Tổng tiền</th>
                                    <th class="product-remove">Xóa sản phẩm</th>
                                </tr>
                            </thead>
                            <tbody>
                                @*@{ List<double> unitPrice = new List<double>();}*@
                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>@item.product.name.ToUpper()</td>
                                        <td><img src="~/Content/images/@item.product.Category.name/@item.product.img" width="100" /></td>
                                        <td><input type="number" class="quantity-select" data-id="@item.product.id" value="@item.Quantity" /></td>
                                        <td>@string.Format("{0:n0} VNĐ", item.product.price.GetValueOrDefault(0))</td>
                                        @if (item.product.sale == 0)
                                        {
                                            <td>@string.Format("{0:n0} VNĐ", (item.product.price.GetValueOrDefault(0) * item.Quantity))</td>
                                            //totalUnit = item.product.price.GetValueOrDefault(0) * item.Quantity;
                                        }
                                        else
                                        {
                                            <td>@string.Format("{0:n0} VNĐ", ((item.product.price.GetValueOrDefault(0) - item.product.price.GetValueOrDefault(0) * item.product.sale / 100) * item.Quantity))</td>
                                            //totalUnit = item.product.price.GetValueOrDefault(0) * item.Quantity;
                                        }
                                        <td><a href="#" class="deleteItemBtn" data-id="@item.product.id"><i class="bi bi-x-circle"></i></a></td>
                                    </tr>

                                    //double totalUnit = item.product.price.GetValueOrDefault(0) * item.Quantity;
                                    //unitPrice.Add(totalUnit);
                                }
                                @*@{ double total = 0;}
                                @foreach (double price in unitPrice)
                                {
                                    total += price;
                                    ViewBag.total = total;
                                    <p>@ViewBag.total b</p>
                                }
                                <p>@ViewBag.total</p>*@
                            </tbody>
                        </table>
                    }
                </div>
            </form>
        </div>

        <div class="row">
            <div class="col-md-6">
                <div class="row mb-5">
                    <div class="col-md-4 mb-3 mb-md-0">
                        <button id="continueBtn" class="btn btn-black btn-sm btn-block">Tiếp tục mua hàng</button>
                    </div>
                    <div class="col-md-4">
                        <button id="updateBtn" class="btn btn-outline-black btn-sm btn-block">Cập nhật giỏ hàng</button>
                    </div>
                    <div class="col-md-4">
                        <button id="removeBtn" class="btn btn-outline-black btn-sm btn-block">Xóa giỏ hàng</button>
                    </div>
                </div>
            </div>
            <div class="col-md-6 pl-5">
                <div class="row justify-content-end">
                    <div class="col-md-7">
                        <div class="row">
                            <div class="col-md-12">
                                <button id="checkoutBtn" class="btn btn-black btn-lg py-3 btn-block" onclick="window.location='/Cart/Checkout'">Thanh toán</button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
@section _Footer {
    <script src="~/Scripts/js/cartController.js"></script>
}