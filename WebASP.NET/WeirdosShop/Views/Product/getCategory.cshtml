@model List<WeirdosShop.Models.Category>

@if(ViewBag.meta == "all")
{
    foreach (var i in Model)
    {
        Html.RenderAction("getAllPro", "Product", new { id = i.id, meta = i.meta, cate = i.name, check = ViewBag.meta });
    }
}
else if (ViewBag.meta == "sale")
{
    foreach (var i in Model)
    {
        Html.RenderAction("getSalePro", "Product", new { id = i.id, meta = i.meta, cate = i.name });
    }
}
else
{
    foreach (var i in Model)
    {
        if(i.meta == ViewBag.meta)
        {
            Html.RenderAction("getAllPro", "Product", new { id = i.id, meta = ViewBag.id, cate = i.name, check = "detail" });
        }
    }
}